#include <iostream>
using namespace std;

int AP(int num){
   int nthterm = 3 * num + 7;
   return nthterm;
}

int main() {
   int num;
   std::cout<<"Enter the value of n to find nth term:";
   std::cin>>num;
   int nthterm = AP(num);
   std::cout<<"nth term of the AP (3n +7) is: "<<nthterm;
   return 0;
}
